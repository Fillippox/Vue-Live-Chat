{"ast":null,"code":"import { ref } from 'vue';\nimport EmojiPicker from 'vue-emoji-picker';\nimport getCurrentUser from '../composables/getCurrentUser';\nimport { timestamp } from '../firebase/config';\nimport useCollection from '../composables/useCollection.js';\nimport VueEmojiPicker from 'vue-emoji-picker';\nexport default {\n  setup() {\n    const {\n      user\n    } = getCurrentUser();\n    const {\n      addDoc,\n      error\n    } = useCollection('messages');\n    const message = ref('');\n    const openEmojiPicker = ref(false);\n    const handleSubmit = async () => {\n      const chat = {\n        name: user.value.displayName,\n        message: message.value,\n        createdAt: timestamp()\n      };\n      await addDoc(chat);\n      //console.log(chat)\n      if (!error.val) {\n        message.value = '';\n      }\n    };\n    return {\n      message,\n      handleSubmit,\n      error,\n      openEmojiPicker\n    };\n  }\n};","map":{"version":3,"mappings":"AAcA,SAAQA,GAAG,QAAO,KAAI;AACtB,OAAOC,WAAU,MAAO,kBAAiB;AACzC,OAAOC,cAAa,MAAO,+BAA8B;AACzD,SAASC,SAAQ,QAAS,oBAAmB;AAC7C,OAAOC,aAAY,MAAO,iCAAgC;AAC1D,OAAOC,cAAa,MAAO,kBAAiB;AAE5C,eAAc;EACVC,KAAK,GAAE;IACH,MAAM;MAAEC;IAAK,IAAIL,cAAc,EAAC;IAChC,MAAM;MAACM,MAAM;MAAEC;IAAK,IAAIL,aAAa,CAAC,UAAU;IAChD,MAAMM,OAAM,GAAIV,GAAG,CAAC,EAAE;IACtB,MAAMW,eAAc,GAAIX,GAAG,CAAC,KAAK;IACjC,MAAMY,YAAW,GAAI,YAAY;MAC7B,MAAMC,IAAG,GAAI;QACTC,IAAI,EAAEP,IAAI,CAACQ,KAAK,CAACC,WAAW;QAC5BN,OAAO,EAAEA,OAAO,CAACK,KAAK;QACtBE,SAAS,EAAEd,SAAS;MACxB;MACA,MAAMK,MAAM,CAACK,IAAI;MACjB;MACA,IAAG,CAACJ,KAAK,CAACS,GAAG,EAAC;QACVR,OAAO,CAACK,KAAK,GAAC,EAAC;MACnB;IACJ;IACA,OAAO;MAACL,OAAO;MAAEE,YAAY;MAAEH,KAAK;MAAEE;IAAe;EACzD;AACJ","names":["ref","EmojiPicker","getCurrentUser","timestamp","useCollection","VueEmojiPicker","setup","user","addDoc","error","message","openEmojiPicker","handleSubmit","chat","name","value","displayName","createdAt","val"],"sourceRoot":"","sources":["C:\\Users\\lego5\\Desktop\\Vue-Project\\Vue-Project\\src\\components\\