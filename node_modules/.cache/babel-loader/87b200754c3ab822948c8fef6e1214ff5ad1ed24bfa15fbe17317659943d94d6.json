{"ast":null,"code":"import { ref } from 'vue';\nimport getCurrentUser from '../composables/getCurrentUser';\nimport { timestamp } from '../firebase/config';\nimport useCollection from '../composables/useCollection.js';\nimport { Picker } from 'emoji-mart';\nimport 'emoji-mart/css/emoji-mart.css';\nexport default {\n  components: {\n    'emoji-picker': Picker\n  },\n  setup() {\n    const {\n      user\n    } = getCurrentUser();\n    const {\n      addDoc,\n      error\n    } = useCollection('messages');\n    const message = ref('');\n    const showEmojiPicker = ref(false);\n    const handleEmojiSelect = emoji => {\n      message.value += emoji.native;\n    };\n    const handleSubmit = async () => {\n      const chat = {\n        name: user.value.displayName,\n        message: message.value,\n        createdAt: timestamp()\n      };\n      await addDoc(chat);\n      //console.log(chat)\n      if (!error.val) {\n        message.value = '';\n      }\n    };\n    return {\n      message,\n      handleSubmit,\n      error,\n      showEmojiPicker\n    };\n  }\n};","map":{"version":3,"mappings":"AASI,SAASA,GAAE,QAAS,KAAI;AACxB,OAAOC,cAAa,MAAO,+BAA8B;AACzD,SAASC,SAAQ,QAAS,oBAAmB;AAC7C,OAAOC,aAAY,MAAO,iCAAgC;AAC1D,SAASC,MAAK,QAAS,YAAW;AAClC,OAAO,+BAA8B;AAErC,eAAc;EACVC,UAAU,EAAE;IACR,cAAc,EAAED;EACpB,CAAC;EACDE,KAAK,GAAE;IACH,MAAM;MAAEC;IAAK,IAAIN,cAAc,EAAC;IAChC,MAAM;MAACO,MAAM;MAAEC;IAAK,IAAIN,aAAa,CAAC,UAAU;IAChD,MAAMO,OAAM,GAAIV,GAAG,CAAC,EAAE;IACtB,MAAMW,eAAc,GAAIX,GAAG,CAAC,KAAK;IACjC,MAAMY,iBAAgB,GAAKC,KAAK,IAAK;MACjCH,OAAO,CAACI,KAAI,IAAKD,KAAK,CAACE,MAAK;IAChC;IAEA,MAAMC,YAAW,GAAI,YAAY;MAC7B,MAAMC,IAAG,GAAI;QACTC,IAAI,EAAEX,IAAI,CAACO,KAAK,CAACK,WAAW;QAC5BT,OAAO,EAAEA,OAAO,CAACI,KAAK;QACtBM,SAAS,EAAElB,SAAS;MACxB;MACA,MAAMM,MAAM,CAACS,IAAI;MACjB;MACA,IAAG,CAACR,KAAK,CAACY,GAAG,EAAC;QACVX,OAAO,CAACI,KAAK,GAAC,EAAC;MACnB;IACJ;IACA,OAAO;MAACJ,OAAO;MAAEM,YAAY;MAAEP,KAAK;MAAEE;IAAe;EACzD;AACJ","names":["ref","getCurrentUser","timestamp","useCollection","Picker","componen